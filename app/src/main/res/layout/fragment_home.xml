<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Hello,"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:id="@+id/hitext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="27dp"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:src="@drawable/ic_frame"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_blue"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/profile1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:onClick="ShowDoctor"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Nugraha"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Doctor"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_arrow_right"
                android:onClick="ShowDoctor"/>


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday, 12 June"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 - 12:00 AM"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/custom_input2"
        android:hint="Search doctor or health institution"
        android:drawableStart="@drawable/custom_search"
        android:drawablePadding="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="15dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="103dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="103dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/circle_feature"
                    android:elevation="2dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="2.5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:onClick="ShowCovid"
                        android:src="@drawable/ic_sun" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:paddingStart="6dp"
                        android:text="Covid-19" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="103dp"
                android:orientation="vertical"
                android:layout_marginLeft="13dp">
                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/circle_feature"
                    android:elevation="2dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="2.5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:onClick="ShowDoctor"
                        android:src="@drawable/ic_profile_add" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:paddingStart="12dp"
                        android:text="Doctor" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="103dp"
                android:orientation="vertical"
                android:layout_marginLeft="13dp">
                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/circle_feature"
                    android:elevation="2dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="2.5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:onClick="ShowMedicine"
                        android:src="@drawable/ic_link" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:paddingStart="6dp"
                        android:text="Medicine" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="103dp"
                android:orientation="vertical"
                android:layout_marginLeft="13dp">
                <RelativeLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/circle_feature"
                    android:elevation="2dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="2.5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:onClick="ShowHospital"
                        android:src="@drawable/ic_hospital" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:paddingStart="6dp"
                        android:text="Hospital" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Near Doctor"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_white2"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/doctor2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:onClick="ShowDoctor"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Andi"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Doctor"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/greylight"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_arrow_right"
                android:onClick="ShowDoctor"/>


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendarnew"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday, 12 June"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/greylight"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clocknew"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 - 12:00 AM"
                    android:textSize="11dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/greylight"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>